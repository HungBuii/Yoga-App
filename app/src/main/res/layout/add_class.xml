<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="25dp">

            <TextView
                android:id="@+id/titleYogaClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Add a new Class"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/titleDateClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="1dp"
                android:layout_marginTop="15dp"
                android:text="Date: "
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@+id/titleYogaClass"/>

            <EditText
                android:id="@+id/addDateClass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleDateClass"
                android:layout_marginTop="15dp"
                android:hint="DD/MM/YYYY"
                android:inputType="datetime|date" />

            <TextView
                android:id="@+id/titleTeacherClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="1dp"
                android:layout_marginTop="15dp"
                android:text="Teacher: "
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@+id/addDateClass"/>

            <EditText
                android:id="@+id/addTeacherClass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleTeacherClass"
                android:layout_marginTop="15dp"
                android:hint="Enter Teacher Name: " />

            <TextView
                android:id="@+id/titleCommentClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="1dp"
                android:layout_marginTop="15dp"
                android:text="Comment: "
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@+id/addTeacherClass"/>

            <EditText
                android:id="@+id/addCommentClass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleCommentClass"
                android:layout_marginTop="15dp"
                android:hint="Enter Comment: "
                android:inputType="text|textMultiLine" />

            <Button
                android:id="@+id/saveButtonClass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/addCommentClass"
                android:backgroundTint="#DA0379"
                android:text="Save"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>